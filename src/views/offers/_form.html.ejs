<div>
    <% if (locals.errors) { %>
      <div class="errors">
        You need to fix the following errors:
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <div class="trade-box">
      <div class="box-user">
        <div class="owner">
          <p>Tus objetos</p>
        </div>
        <% user1ObjectsList.forEach((object) => { %>
        <form action="/"></form>
        <div class="item">
          <div class="selector">
            <input type="radio" id="<%= object.id %>" name="items1" value="item1">
          </div>
          <div class="item-img">
            <img src="https://via.placeholder.com/150" alt="F servidor :(">
          </div>
          <div class="item-name">
            <p><%= object.name %></p>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="box-user">
        <div class="owner">
          <p>Objetos de <%= user2.name %></p>
        </div>
      </div>
    </div>

    <br>
    <br>
    <form action="<%= submitOfferPath %>" method="post">
      <% if (!offer.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
      <input type="hidden" name="tradeId" value=<%= tradeId %> />
      <div  class="field">
        <input type="hidden" name="sender" value= "<%= currentUser.id %>" />
      </div>
      <div  class="field">
        <label for="info">Info</label>
        <input type="text" name="info" value="<%= offer.info %>" />
      </div>
      <div  class="field">
        <label for="status">Status</label>
        <textarea type="text" name="status"><%= offer.status %></textarea>
      </div>
      <div  class="field">
        <% if (offer.isNewRecord) { %>
          <input type="submit" name="create" value="Create" />
        <% } else { %>
          <input type="submit" name="update" value="Update" />
        <% } %>
      </div>
    </form>
  </div>
