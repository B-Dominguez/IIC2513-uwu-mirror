<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas solucionar los siguientes errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitUserPath %>" method="post">
    <% if (!user.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
      <input type="hidden" name="isactive" value=1 />
      <input type="hidden" name="token" value='<%= user.token %>' />
    <% } else { %>
      <select id="isactive" name="isactive">
        <option value=1>Activo</option>
        <option value=0>Inactivo</option>
      </select>
      <input type="hidden" name="token" value='a' />
    <% } %>
    <input type="hidden" name="usertype" value=0 />
    <div  class="field">
      <label for="username">Username</label>
      <input type="text" name="username" value="<%= user.username %>" />
    </div>
    <div  class="field">
      <!-- <label for="password">Password</label> -->
      <input type="hidden" name="password" value="<%= user.password %>" />
    </div>
    <div  class="field">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= user.name %>" />
    </div>
    <div  class="field">
      <label for="email">Email</label>
      <textarea type="text" name="email"><%= user.email %></textarea>
    </div>
    <div  class="field">
      <label for="phone">Phone</label>
      <textarea type="text" name="phone"><%= user.phone %></textarea>
    </div>
    <div  class="field">
      <label for="address">Address</label>
      <textarea type="text" name="address"><%= user.address %></textarea>
    </div>
    <div  class="field">
      <label for="rating">rating</label>
      <textarea type="number" name="rating"><%= user.rating %></textarea>
    </div>
    <div  class="field">
      <% if (user.isNewRecord) { %>
        <input type="submit" name="create" value="Create" />
      <% } else { %>
        <input type="submit" name="update" value="Update" />
      <% } %>
    </div>
  </form>
</div>