<h2>Trades from user</h2>
<% if (!userTrades.length) { %>
    <p>No results</p>
<% } else { %>
    <table id='trades-list'>
        <thead>
            <tr>
                <th>id_user1</th>
                <th>id_user2</th>
                <th>status</th>
                <th>actual_offer</th>
                <th>date</th>
                <% if ((currentUser) && currentUser.usertype == 2){ %>
                  <th colspan="3">Actions</th>
                <% } else { %>
                  <th>Action</th>
                <% } %>

            </tr>
        </thead>
        <tbody>
            <% userTrades.forEach((trade) => { %>
                <tr>
                    <td><%= trade.id_user1 %></td>
                    <td><%= trade.id_user2 %></td>
                    <td><%= trade.status %></td>
                    <td><%= trade.actual_offer %></td>
                    <td><%= trade.date %></td>
                    <td><a href="<%= showTradePath(trade) %>">Show</a></td>
                    <% if ((currentUser) && currentUser.usertype == 2){ %>
                      <td><a href="<%= editTradePath(trade) %>">Edit</a></td>
                      <form action="<%= deleteTradePath(trade) %>" method="POST">
                        <td>
                          <input type="hidden" name="_method" value="delete" />
                          <input type="submit" value="Delete" />
                        </td>
                      </form>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>
